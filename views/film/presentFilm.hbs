 <script type="text/javascript">
    function addOrUpdateUrlParam(name, value) {
        var href = window.location.href;
        var regex = new RegExp("[&\\?]" + name + "=");
        if (regex.test(href)) {
            regex = new RegExp("([&\\?])" + name + "=\\d+");
            window.location.href = href.replace(regex, "$1" + name + "=" + value);
        } else {
            if (href.indexOf("?") > -1)
                window.location.href = href + "&" + name + "=" + value;
            else
                window.location.href = href + "?" + name + "=" + value;
        }
    }
    </script>
<div class="container">
<div>
<h2 class="title">PHIM ĐANG CHIẾU</h2>
<hr/>

<div class="present_list" id="present_list">
  {{#each rows}}
    
            <div class="card col-sm-12 col-md-4 " style="margin-top:2%;">
    <a href="/film/detail/{{idphim}}"><img src="{{hinhanh}}" class="card-img-top img-film"></a>
    <div class="card-body" style="background: black;margin:0;padding:5px;text-align:center;border-bottom-left-radius:20px;border-bottom-right-radius:20px;color:white;padding-top:10px">
        <h3 class="card-title" style="margin-bottom:2%">{{tenphim}}</h3>
        <div class="card-text">Khởi chiếu: {{khoichieu}}</div>
        <div class="card-text">Thời lượng: {{thoiluong}} phút</div>
        <div class="card-text">Điểm đánh giá: {{diemdanhgia}}</div>
     </div>
     </div>
  {{/each}}
    
</div>
 <nav aria-label="Page navigation" class="container">
        <ul class="pagination">
            {{#if showPrevPage}}
                <li>
                    <a href="javascript: addOrUpdateUrlParam('page', {{prevPage}});" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {{/if}}
            {{#each pages }}
                {{#if isActive }}
                    <li class="active">
                        <a href="javascript: void(0)" >{{pageValue}}</a>
                    </li>
                {{else}}
                    <li>
                        <a href="javascript: addOrUpdateUrlParam('page', {{pageValue}});">{{pageValue}}</a>
                    </li>
                {{/if}}
            {{/each}}
            {{#if showNextPage }}
                <li>
                    <a href="javascript: addOrUpdateUrlParam('page', {{nextPage}});" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {{/if}}
        </ul>
    </nav>

</div>
 

