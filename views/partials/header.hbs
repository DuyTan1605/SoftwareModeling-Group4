<div class="header bg-header" id="myHeader">
  <a href="/home"><img src="/Imgs/logo_header.jpg" class="logo_header"></a>
  {{#isManage layoutModels.account.permission}}
  <ul class="menu_bars">
    <li><a href="/film" class="menu_ele">  PHIM</a></li>
     <li> <a href="/theater" class="menu_ele">RẠP PHIM</a></li>
    <li> <a href="/showTimes" class="menu_ele">LỊCH CHIẾU</a></li>
     <li> <a href="/event" class="menu_ele">SỰ KIỆN</a></li>
     <li><a href="/member" class="menu_ele">THÀNH VIÊN</a></li> 
      {{!-- <li><a href="/member" class="menu_ele">PHẢN HỒI</a></li>  --}}
  </ul>

   <form method="get" action="/search" autocomplete="false" id="searchForm">
                <div class="input-group col-md-9">
                    <!-- Dropdown -->
                    <div class="input-group-btn search-panel">
                        
                        <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" style="background-color:#EDEEF2">
                            <span id="search-concept" class="font-menu">Tất cả</span> <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu font-menu" role="menu">
                            <li><a href="#danhmuc">Tất cả</a></li>
                            {{#each layoutModels.categories}}
                                <li><a href="#{{idtheloai}}">{{tentheloai}}</a></li>
                              {{/each}}
                        </ul>
                    </div>
                   
                    <!-- Textbox search -->
                    <input type="text" placeholder="Tìm kiếm" class="form-control inputtext font-menu" name="word" size="50"/>
                    <input type="hidden" name="cat" value="danhmuc" id="search-param">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-search font-menu"></span>
                    </button>
                    </span>
                </div>
            </form>
            {{else}}
            <ul class="menu_bars">
                <li> <a href="/manager/film" class="menu_ele">PHIM</a></li>
                <li> <a href="/manager/event" class="menu_ele">SỰ KIỆN</a></li>
                 <li> <a href="/manager/service" class="menu_ele">DỊCH VỤ</a></li>
                  <li> <a href="/manager/response" class="menu_ele">PHẢN HỒI</a></li>
                   <li> <a href="/manager/timeShow" class="menu_ele">LỊCH CHIẾU</a></li>
                     <li> <a href="/manager/account" class="menu_ele">TÀI KHOẢN</a></li>
                    <li> <a href="/manager/bookTicket" class="menu_ele">ĐẶT VÉ</a></li>
            </ul>

          {{/isManage}}
            <div class="col-md-3" style="display:flex;align-items:center;padding-left: 3%;margin-left:auto">
            {{#if layoutModels.isLogged }}
                {{!-- <i class="glyphicon glyphicon-user pull-left" style="font-size: 25px; color: #fff"></i> --}}
                <i class="fas fa-user-circle" style="font-size: 35px; color: #fff;height:50px;margin-right:4px" ></i>
                <div class="dropdown" style="margin-bottom: 15px;width:100%">
                    <button class="dropbtn">
                        <span style="height: 25px;">
                   Chào, {{getName layoutModels.account.name}} !
                    <br/>
                    
                    </span>
                    </button>
                    <div class="dropdown-content">
                       <a href="/account/profile"><i class="fas fa-id-card"></i> Thông tin cá nhân</a>
                        <a href="/account/changePassword"><i class="fas fa-key"></i> Đổi mật khẩu</a>
                          {{#isManage layoutModels.account.permission}}
                          <a href="/account/historyBooking"><i class="fas fa-book"></i> Lịch sử giao dịch</a>
                          <a href="/account/response"><i class="fas fa-reply"></i> Phản hồi</a>
                          {{/isManage}}
                        <a id="logoutLink" href="javascript:void(0);"><i class="fas fa-door-open"></i> Thoát</a>                      
                    </div>
                </div>
            {{else}}
                <a class="btn btn-default col-md-2" data-toggle="modal" data-target="#signinModal" style="border:none;background-color:transparent;width:100%">
                    <span class="glyphicon glyphicon-user" style="font-size:150%;color:#fff;"></span>
                    <span style="color:#fff;"> Đăng nhập</span>
                </a>
                <!-- Modal -->
                <div id="signinModal" class="modal fade" role="dialog">
                    <div class="modal-dialog modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Đăng nhập</h4>
                            </div>
                            <div class="modal-body">
                                <form method="post" action="/account/login">
                                    <div class="input-group">
                                        <!-- Email -->
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required autofocus>
                                    </div>
                                    <!-- Email -->
                                    <div class="input-group">
                                        <!-- Mật khẩu -->
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                        <input type="password" class="form-control" id="mk" name="password" placeholder="Password" required>
                                    </div>
                                    <!-- Mật khẩu -->
                                    <div class="col-md-offset-1 col-md-11" style="padding-right: 0;">
                                        <!-- link -->
                                        <div class="col-md-7" style="padding-right: 0; text-align: right;">
                                            <a href="/account/resetPassword">Quên mật khẩu?</a>
                                        </div>
                                        <div class="col-md-5" style="padding-right: 0; text-align: right;">
                                            <a href="/account/register">Đăng ký</a>
                                        </div>
                                    </div>
                                    <!-- link -->
                                    <!-- Checkbox duy trì đăng nhập -->
                                    <div class="col-md-offset-4 col-md-8" style="padding-right: 0; text-align: right;">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="remember">Duy trì đăng nhập</label>
                                        </div>
                                    </div>
                                    <div class="col-md-12" style="padding-left: 0; padding-right: 0;">
                                        <button type="submit" class="btn btn-labeled btn-success" style="width: 49%">
                                            <span class="btn-label"><i class="glyphicon glyphicon-ok"></i></span> Đăng nhập</button>
                                        <button type="button" class="btn btn-labeled btn-danger" data-dismiss="modal" style="width: 49%">
                                            <span class="btn-label"><i class="glyphicon glyphicon-remove"></i></span> Hủy</button>
                                    </div>
                                    <div class="col-md-12" style="padding: 0;">
                                        <hr/>
                                    </div>
                                    
                                    <a class="btn btn-block btn-social btn-google" href="/auth/google">
                                        <span class="fab fa-google"></span> Đăng nhập với google
                                    </a>

                                    <a class="btn btn-block btn-social btn-facebook" href="/auth/google">
                                        <span class="fab fa-facebook"></span> Đăng nhập với facebook
                                    </a>
                                </form>
                            </div>
                            {{!-- <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          </div> --}}
                        </div>
                    </div>
                </div>
               
                <!-- Modal -->
            {{/if}}
        </div>
</div>
<script>
    window.onscroll = function() {myFunction()};

        var header = document.getElementById("myHeader");
        var sticky = header.offsetTop;

        function myFunction() {
        if (window.pageYOffset > sticky) {
            header.classList.add("sticky");
        } else {
            header.classList.remove("sticky");
        }
        }
        
</script>


    

