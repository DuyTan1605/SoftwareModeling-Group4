<style>
    .header{
        width:100%;
        height:100%;
         display: flex;
        align-items: center;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        margin-bottom:1%;
           
       
    }
    .bg-header{
        background-color:#404040
    }
    .sticky {
       
        top: 0;
        width: 100%;
        }
    .logo_header{
      
        height:100px;
       
        }
        .menu_bars {
        list-style-type: none;
        margin-left: 30px;
        width:100%
        }
        .menu_bars>li {
        display: inline;
        border:1px solid white;
          background-color:#ff66b3;
          padding:12px;
          float:left;
        }
       .menu_bars>li:first-child{
           
            border-top-left-radius:50px ;
             border-bottom-left-radius:50px ;
       }
       .menu_bars>li:last-child{
           
            border-top-right-radius:50px ;
             border-bottom-right-radius:50px ;
       }
       .menu_ele{
           text-decoration: none;
           color:white;
           font-weight: bold;
           
       }
        .menu_ele:visited{
           text-decoration: none;
       }
       .menu_ele:hover
       {
           text-decoration: none;
           
       }
      .menu_ele:active{
          text-decoration: none;
      }
       #searchForm{
          
           margin-left:20px;
           float:right;
        padding-top:10px;
        width:75%;
        
          }
          .signUpBtn{
              color:white;
              margin-left:auto;
              margin-right:15px;
              font-size:16px;
          }
           .signInBtn{
              color:white;
                font-size:16px;
                margin-left:auto;
                margin-right:10px;
               
          }
          #searchForm{
              margin-right:10px;
             align-content: center;
          }
         @media only screen and (max-width: 600px) {
             
             .logo_header{
      
                height:50px;
            }
            .menu_bars
            {
                display: none;
            }
            .font-menu{
                font-size:12px;
            }
            .signUpBtn
            {
                font-size:12px;
               margin-left:5px;
             
               
            }
            .signInBtn{
                font-size:12px;
               
                
            }
            .font-menu{
                font-size:12px;
            }
          
        }
