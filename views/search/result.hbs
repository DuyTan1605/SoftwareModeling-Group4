    <div class="card-text">Thời lượng: {{thoiluong}} phút</div>
    <div class="card-text">Điểm đánh giá: {{diemdanhgia}}</div>
   
   
  </div>
    </div>
    {{/each}}
    </div>
    
    </div>
    <nav aria-label="Page navigation" class="container">
        <ul class="pagination">
            {{#if showPrevPage}}
                <li>
                    <a href="javascript: addOrUpdateUrlParam('page', {{prevPage}});" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {{/if}}
            {{#each pages }}
                {{#if isActive }}
                    <li class="active">
                        <a href="javascript: void(0)">{{pageValue}}</a>
                    </li>
                {{else}}
                    <li>
                        <a href="javascript: addOrUpdateUrlParam('page', {{pageValue}});">{{pageValue}}</a>
                    </li>
                {{/if}}
            {{/each}}
            {{#if showNextPage }}
                <li>
                    <a href="javascript: addOrUpdateUrlParam('page', {{nextPage}});" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {{/if}}
        </ul>
    </nav>
