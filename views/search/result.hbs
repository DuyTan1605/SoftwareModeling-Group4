{{#section 'js'}}
    <script type="text/javascript">
    function addOrUpdateUrlParam(name, value) {
        var href = window.location.href;
        var regex = new RegExp("[&\\?]" + name + "=");
        if (regex.test(href)) {
            regex = new RegExp("([&\\?])" + name + "=\\d+");
            window.location.href = href.replace(regex, "$1" + name + "=" + value);
        } else {
            if (href.indexOf("?") > -1)
                window.location.href = href + "&" + name + "=" + value;
            else
                window.location.href = href + "?" + name + "=" + value;
        }
    }
    </script>
{{/section}}

<div class="container" style="color:white">
    <div class="row" style="margin-bottom: 1%">
        <h3 style="float: left;">Kết quả tìm kiếm cho '{{word}}':&nbsp</h3>
        <h3 style="color:#00f">{{total}} kết quả</h3>
        <hr>
       <i class="fas fa-filter" style="font-size: 2em;margin-right:2px;"></i>
        <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                {{orderString}}
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><a href="javascript: addOrUpdateUrlParam('order', 0);" data-value="action">Từ A đến Z</a></li>
                <li><a href="javascript: addOrUpdateUrlParam('order', 1);" data-value="action">Ngày khởi chiếu tăng dần</a></li>
                <li><a href="javascript: addOrUpdateUrlParam('order', 2);" data-value="another action">Ngày khởi chiếu giảm dần</a></li>
                <li><a href="javascript: addOrUpdateUrlParam('order', 3);" data-value="something else here">Điểm đánh giá tăng dần</a></li>
                <li><a href="javascript: addOrUpdateUrlParam('order', 4);" data-value="separated link">Điểm đánh giá giảm dần</a></li>
                <li><a href="javascript: addOrUpdateUrlParam('order', 5);" data-value="separated link">Phim đang chiếu</a></li>
                <li><a href="javascript: addOrUpdateUrlParam('order', 6);" data-value="separated link">Phim sắp chiếu</a></li>
            </ul>
        </div>
    </div>
    <div class="content">
    {{#each rows}}
   
     <div class="card col-md-4 col-sm-6">
  <a href="/film/detail/{{idphim}}"><img src="{{hinhanh}}" class="card-img-top img-film"></a>
  <div class="card-body" style="background: black;margin:0;padding:5px;text-align:center;border-bottom-left-radius:20px;border-bottom-right-radius:20px;color:white">
    <h3 class="card-title" style="margin:0">{{tenphim}}</h3>
