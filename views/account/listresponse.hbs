{{#section 'css'}}
    <link href="/assets/css/datatable2.css" rel="stylesheet" type="text/css">  
    <style>
        table{
            background: white;
            color:black
        }
        .dataTables_length {
            color:white
        }   

        .dataTables_filter {
            color:white
        }

    

        .dataTables_info {
            color:white
        }

      

        .dataTables_paginate {
            color:white
        }
}
    </style>
{{/section}}
{{#section 'js'}}
    <script type="text/javascript" src="/assets/js/datatables/jquery-3.5.1.js"></script>
     <script type="text/javascript" src="/assets/js/datatables/jquery.dataTable.min.js"></script>
    <script type="text/javascript" src="/assets/js/datatables/dataTable.boostrap4.min.js"></script>
       <script>
           $(document).ready(function() {
                $('#example').DataTable({
                    "scrollX":true,
                    "language": {
                        "emptyTable": "Lịch sử phản hồi trống"
                    }
                });
            } );
       </script>
{{/section}}
<div class="container">
<table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th scope="col">Thời gian phản hồi</th>
                <th scope="col">Nội dung phản hồi</th>
                <th scope="col">Nội dung hồi đáp</th>
                <th scope="col">Thời gian hồi đáp</th>
            </tr>
        </thead>
        <tbody>
             {{#each historyList}}
                <tr>
                <td>{{thoigianphanhoi}}</td>
                <td>{{noidungphanhoi}}</td>
                <td>{{noidunghoidap}}</td>
                <td>{{thoigianhoidap}}</td>
                
            {{/each}}
        </tbody>
        
</table>
</div>