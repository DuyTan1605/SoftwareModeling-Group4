{{#section 'title'}}
    Đổi mật khẩu
{{/section}}
{{#section 'breadcrumbs'}}
    <div class="row container-fluid">
        <ol class="breadcrumb breadcrumb-arrow">
            <li><a href="/home">Trang chủ</a></li>
            <li><a href="/account/profile">Tài khoản</a></li>
            <li class="active"><span>Đổi mật khẩu</span></li>
        </ol>
        <!-- /Đường dẫn -->
    </div>
{{/section}}
{{#section 'css'}}
    <link href="/assets/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" media="all" />
    <style type="text/css">
    .btn-account i {
        margin-top: 2%;
        font-size: 30px;
    }
    
    .btn-account span {
        padding-left: 15px;
        padding-right: 5px;
        width: 100%;
        display: inline-block;
        text-align: left;
        font-size: 130%;
    }
    
    .btn-account span small {
        width: 100%;
        display: inline-block;
        text-align: left;
    }
    </style>
{{/section}}
{{#section 'js'}}
    <script type="text/javascript" src="/assets/bootstrap-4.3.1-dist/js/bootstrap-datetimepicker.js" charset="UTF-8"></script>
    <script type="text/javascript" src="/assets/jquery-validation-1.12.0/jquery.validate.min.js"></script>
    <script type="text/javascript">
    $('.form_date').datetimepicker({
        //language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
    $('#formInfo').validate({
        ignore: ".ignore",
        rules: {
            oldPW: {
                required: true,
                minlength: 8
            },
            newPW: {
                required: true,
                minlength: 8
            },
            renewPW: {
                required: true,
                minlength: 8,
                equalTo: '#txtNewPW'
            }
        },

        messages: {
            oldPW: {
                required: 'Vui lòng nhập mật khẩu cũ',
                minlength: 'Mật khẩu phải ít nhất 8 kí tự'
            },
            newPW: {
                required: 'Vui lòng nhập mật khẩu mới',
                minlength: 'Mật khẩu phải ít nhất 8 kí tự'
            },
            renewPW: {
                required: 'Vui lòng xác nhận mật khẩu mới',
                minlength: 'Mật khẩu phải ít nhất 8 kí tự',
                equalTo: 'Mật khẩu xác nhận không khớp'
            },

        },

        errorElement: 'span',
        errorClass: 'help-block',

        highlight: function(element) {
            $(element)
                .closest('.form-group')
                .addClass('has-error');
        },

        success: function(label) {
            $(label)
                .closest('.form-group')
                .removeClass('has-error');

            label.remove();
        },
    });
    </script>
{{/section}}